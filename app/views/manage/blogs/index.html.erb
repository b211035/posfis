
<div class="item w3">
	<div class="artList">
		<h2 class="bar">記事一覧</h2>
		<div class="inner">
			<% @manage_blogs.each do |manage_blog| %>
			<div class="box1">
				<div class="artTitle"><%= link_to manage_blog.title, manage_blog %></div>
				<div class="artLiInfo">
					<div class="date">
						<p>2012年12月12日</p>
					</div>
					<div class="artMenu">
						<ul>
							<li><%= link_to '編集', edit_manage_blog_path(manage_blog) %></li>
							<li><%= link_to '削除', manage_blog, method: :delete, data: { confirm: '削除しますか？(削除後は復元できません)' } %></li>
							<!-- <li><%= link_to 'Show', manage_blog %></li> -->
							<li class="status">公開</li>
						</ul>
					</div>
				</div>
			</div>
			<% end %> 						
		</div>
	</div>
</div>
		
<div class="item w1">
	<div class="newArt">
		<h2 class="bar">記事メニュー</h2>
		<div class="inner">
			<ul>
				<li><%= link_to '新規作成', new_manage_blog_path %></li>
			</ul>
		</div>
	</div>
</div>