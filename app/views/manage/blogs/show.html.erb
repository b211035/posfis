  <div class="item w3 artList">
    <h2 class="bar">記事一覧</h2>
    <div class="inner">
      <div class="box1">
        <div class="artTitle"><%= @manage_blog.title %></div>
        <div class="artLiInfo">
          <div>
            <%= @manage_blog.content %><br>
          </div>
          <div class="date">
            <p><%= @manage_blog.created_at %></p>
          </div>
          <div style="width:100px; height:100px;">
            <%= image_tag @manage_blog.picture.url(:medium) %>
          </div>
          <br><br>
          <%= link_to 'Edit', edit_manage_blog_path(@manage_blog) %> |
          <%= link_to 'Back', manage_blogs_path %>
        </div>
      </div>            
    </div>
  </div>
</div>

