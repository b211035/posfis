<div class="item w3">
	<div class="productList">
		<h2 class="bar">販売管理</h2>
		<div class="inner">
			<div class="histrry-type">
				<table>
					<tr>
						<td class="send-before"></td>
						<td>未処理</td>
						<td class="send-now"></td>
						<td>発送準備中</td>
						<td class="send-end"></td>
						<td>発送完了</td>
					</tr>
				</table>
			</div>
			
			<div class="send-before-list">
				<div class="artTitle">
					<h3>無農薬トマト</h3>
				</div>
				<div class="productImg">
					<img src="http://itofarm.life.coocan.jp/img1/l_tomato.jpg" alt="">
				</div>
				<div class="next-btn">
							<span>次の段階へ</span>
				</div>
				<div class="artLiInfo">
					<div class="date"><p>2014年1月1日</p></div>
					<div class="artMenu">
						<ul>
							<li>詳細を表示</li>
						</ul>
					</div>
				</div>
			</div>
			
			<div class="send-now-list">
				<div class="artTitle">
					<h3>野菜詰め合わせ</h3>
				</div>
				<div class="productImg">
					<img src="https://www.hoodo.jp/image/store/parts/anzu/goods/01870024s.jpg" alt="">
				</div>
				<div class="next-btn">
							<span>次の段階へ</span>
				</div>
				<div class="artLiInfo">
					<div class="date"><p>2013年12月21日</p></div>
					<div class="artMenu">
						<ul>
							<li>詳細を表示</li>
						</ul>
					</div>
				</div>
			</div>
			
			<div class="send-end-list">
				<div class="artTitle">
					<h3>野菜BOX</h3>
				</div>
				<div class="productImg">
					<img src="http://your-kingdom.jp/user_data/packages/jas/img/productsphoto/obihiro/michishita/yasaipack06.jpg" alt="">
				</div>
				<div class="next-btn">
							<span>次の段階へ</span>
				</div>
				<div class="artLiInfo">
					<div class="date"><p>2013年12月10日</p></div>
					<div class="artMenu">
						<ul>
							<li>詳細を表示</li>
						</ul>
					</div>
				</div>
			</div>

			<% @orders.each do |order| %>
				<% if order.condition == 1 %>
					<div class="send-before-list">
				<% elsif order.condition == 2 %>
					<div class="send-now-list">
				<% elsif order.condition == 3 %>
					<div class="send-end-list">
				<% end %>
						<div class="artTitle">
							<h3><%= order.product.product_name %></h3>
						</div>
						<div class="productImg">
							<%= image_tag order.product.picture.url(:medium) %>
						</div>
						<div class="next-btn">
							<% if order.condition <= 2 %>
								<%= link_to next_phase_manage_order_path(order) ,:remote => true  do %>
									<span>次の段階へ</span>
								<% end %>
							<% end %>
						</div>
						<div class="artLiInfo">
							<div class="date"><p><%= format_date order.created_at %></p></div>
							<div class="artMenu">
								<ul>
									<li><%= link_to '詳細を表示', manage_order_path(order) %></li>
								</ul>
							</div>
						</div>
					</div>
			<% end %>
			
		</div>
	</div>
</div>