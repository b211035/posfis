<div class="item w3">
  <div class="artList">
    <h2 class="bar">商品一覧</h2>
    <div class="inner">  
      <table>
        <thead>
          <tr>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @manage_products.each do |manage_product| %>
            <tr>
              <td><%= link_to 'Show', manage_product %></td>
              <td><%= link_to 'Edit', edit_manage_product_path(manage_product) %></td>
              <td><%= link_to 'Destroy', manage_product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>    
    </div>
  </div>
</div>
    
<div class="item w1">
  <div class="newArt">
    <h2 class="bar">新規登録</h2>
    <div class="inner">
      <ul>
        <li><%= link_to 'New Product', new_manage_product_path %></li>
      </ul>
    </div>
  </div>
</div>