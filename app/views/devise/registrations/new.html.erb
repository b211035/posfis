<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>

  <%= f.fields_for :user_infos do |ui| %>
    <div><%= ui.label :user_name %><br />
    <%= ui.text_field :user_name %></div>

    <div><%= ui.label :user_address_number %><br />
    <%= ui.text_field :user_address_number %></div>

    <div><%= ui.label :user_address %><br />
    <%= ui.text_field :user_address %></div>

    <div><%= ui.label :avatar %><br />
    <%= ui.file_field :avatar %></div>
  <% end %>



  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>
