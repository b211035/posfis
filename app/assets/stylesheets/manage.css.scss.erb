************************************/



/******************
* media query / tablet
******************/
@media screen and (max-width: 800px) {
	
	.w3{
		width: 580px;
	}
	
	.accsess{
		display: none;
	}
}



/******************
* media query / smartphone
******************/

@media screen and (max-width: 610px) {

	.box{
		padding: 5px;
	}
	.container{
		width: auto !important;
	}
	
	.w1{
		width: 100%;
		height: auto;
	}
	
	.w2{
		width: 100%;
		height: auto;
	}
	
	.w3{
		width: 100%;
		height: auto;
	}
	
	
	.item {	
		margin: 5px 0;
		@include box-shadow(0 0 0 #000);
		
		img{
			width: 100%;
			height: auto;
		}
	}
	
	ul{
		&:after {
			content: '';
			display: block;
			clear : both;
			height: 0;
		}
	}
	
	.menu{
		width: 25%;
		font-size: 180%;
		float: left;
		text-align: center;
		border: solid 2px darken($menuColor, 10%);
		border-left: 0;
		border-top: 0;
		
		a{
			-webkit-tap-highlight-color: darken($accentColor, 10%);
		}
		
		li{
		}
		
		.icon{
			//font-size: 180%;
		}
		
		.tag{
			display: none;
		}
	}
	.friends{
		.inner{
			display: none;
		}
	}
}


