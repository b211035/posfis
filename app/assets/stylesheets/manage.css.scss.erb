	.themeImg{
		width: 50%;
		float: left;
	}
	
	.themeCnt{
		width: 50%;
		padding-left: 10px;
		float: left;
	}
	
	a{
		color: $mainColor;
		text-decoration: underline;
		
		&:hover{
			text-decoration: none;
